<%- include('partials/header'); -%>
    <h1>Home</h1>

    <p>
        <%= homePage %>
    </p>

        <P>
            <% articlePost.forEach(function(post){ %>
                <h1>
                    <%= post.title %>
                </h1>
                <p>
                    <%=post.content.substring(0, 100) + "...."%>
                    <!-- from the post collection (object), get the id -->
                    <a href="/posts/<%=post._id%>">Read More</a>
                </p>
                <% }) %>

        </P>
        <%- include('partials/footer'); -%>